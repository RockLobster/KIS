- title @user.username
%p
  %b Username:
  = h @user.username
%p
  %b E-Mail:
  = h @user.email
%p
  %b First name:
  = h @user.first_name
%p
  %b Family name:
  = h @user.family_name
%p
  %b Address:
  = h @user.address
%p
  %b Phone:
  = h @user.phone
%p
  %b Language:
  = h @user.language
%p
  %b Role:
  - @user.domains.each do |d|
    = d.name

