%h1=t(:users_listing)
%table
    %thead
        %tr
            %th=t(:username)
            %th=t(:email)
            %th=t(:first_name)
            %th=t(:family_name)
            %th=t(:role)
            %th{ :colspan => '3' }
    %tbody
        - @users.each do |user|
            %tr
                %td= h user.username
                %td= h user.email
                %td= h user.first_name
                %td= h user.family_name
                %td
                    - user.domains.each do |d|
                        = d.name + '<br />'
                %td= link_to t(:show), user
                %td= link_to t(:edit), edit_user_path(user)
                %td= link_to t(:destroy), user, :confirm => 'Are you sure?', :method => :delete
%p
    = link_to t(:new_user_button), new_user_path
