-title(t('admin.admin_area'))

%dl.admin-list.user-management
    %dt=t('admin.user_management')
    %dd=link_to image_tag("users.png", :alt => "Users") + t('admin.users'), users_path
    %dd=link_to image_tag("domains.png", :alt => "Domains") + t('admin.domains'), domains_path
    %dd.last=link_to image_tag("permissions.png", :alt => "Permissions") + t('admin.permissions'), permissions_path

%dl.admin-list.catalog-management
    %dt=t('admin.catalog_management')
    %dd=link_to image_tag("catalogs.png", :alt => "Catalogs") + t('admin.catalogs'), catalogs_path
    %dd.last=link_to image_tag("catalog_types.png", :alt => "Catalog Types") + t('admin.catalog.types'), catalog_types_path

%dl.admin-list.medical-report-management
    %dt=t('admin.medical_reports.report')
    %dd.last=link_to image_tag("reportheader.png", :alt => "Header festlegen") + t('admin.medical_reports.header'), {:controller => "report_headers", :action => "index"}

%dl.admin-list.medical-template-management
    %dt=t('admin.medical_template.template')
    %dd.last=link_to image_tag("medical_template.png", :alt => "Medical Template") + t('admin.medical_template.medical_template'), {:controller => "medical_templates", :action => "index"}

%dl.admin-list.file-management
    %dt=t('admin.file_management')
    %dd=link_to image_tag("backup.png", :alt => "Export") + t('admin.export'), {:controller => "database_backup", :action => "export"}
    %dd.last=link_to image_tag("export.png", :alt => "Import") + t('admin.import'), {:controller => "database_backup", :action => "import"}
