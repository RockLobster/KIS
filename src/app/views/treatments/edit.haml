%h1=t('treatment.edit')

- form_for(@treatment, :url =>  patient_case_file_treatment_path(params[:patient_id], params[:case_file_id])) do |f|
  = f.error_messages

  %p
    = f.label t('treatment.description')
    %br/
    = f.text_area :description

  %p
    = f.label t('treatment.starting_date')
    %br/
    = f.date_select :start_date

  %p
    = f.submit t('action.update')


= link_to t('action.show'), patient_case_file_treatment_path(:patient_id => params[:patient_id], :case_file_id => params[:case_file_id], :id => @treatment), :class => 'acts_as_button'

= link_to t('action.back'), patient_case_file_treatments_path(:patient_id => params[:patient_id], :case_file_id => params[:case_file_id]), :class => 'acts_as_button darkgray'