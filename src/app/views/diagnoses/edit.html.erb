<h1>Editing diagnosis</h1>

<% form_for(@diagnosis) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :case_file_id %><br />
    <%= f.text_field :case_file_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @diagnosis %> |
<%= link_to 'Back', diagnoses_path %>