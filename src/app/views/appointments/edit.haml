%h1 Editing appointment
- form_for(@appointment) do |f|
  = f.error_messages
  %p
    = f.label :start_date
    %br/
    = f.date_select :start_date
  %p
    = f.label :end_date
    %br/
    = f.date_select :end_date
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label :description
    %br/
    = f.text_area :description
  %p
    = f.submit 'Update'
= link_to 'Show', @appointment
|
\#{link_to 'Back', appointments_path}
