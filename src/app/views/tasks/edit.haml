%h1 Editing task
- form_for(@task) do |f|
  = f.error_messages
  %p
    = f.label :deadline
    %br/
    = f.date_select :deadline
  %p
    = f.label :creator_comment
    %br/
    = f.text_area :creator_comment
  %p
    = f.label :executor_comment
    %br/
    = f.text_area :executor_comment
  %p
    = f.label :state
    %br/
    = f.text_field :state
  %p
    = f.submit 'Update'
= link_to 'Show', @task
|
\#{link_to 'Back', tasks_path}