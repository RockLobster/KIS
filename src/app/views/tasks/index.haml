%h1 Listing tasks
%table
  %tr
    %th Deadline
    %th Creator comment
    %th Executor comment
    %th State
  - @tasks.each do |task|
    %tr
      %td= h task.deadline
      %td= h task.creator_comment
      %td= h task.executor_comment
      %td= h task.state
      %td= link_to 'Show', task
      %td= link_to 'Edit', edit_task_path(task)
      %td= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete
%br/
= link_to 'New task', new_task_path