- title t('admin.catalog.user_defined.add_field_entry')

- form_tag url_for(:controller => 'catalogs' , :action=> 'create_field_entry', :id => @catalog.id) do
 
  %p
    = label_tag :name,t('formtastic.labels.field_entry.name')
    %br/
    = text_field_tag :name
  %p
    = label_tag :description,t('formtastic.labels.field_entry.description')
    %br/
    = text_field_tag :description
  %p
    = submit_tag t('admin.catalog.user_defined.add_field_entry')
    %br/
= link_to t('action.back'), @catalog
