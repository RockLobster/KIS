%h1 New patient
- form_for(@patient) do |f|
  = f.error_messages
  %p
    = f.label :first_name
    %br/
    = f.text_field :first_name
  %p
    = f.label :family_name
    %br/
    = f.text_field :family_name
  %p
    = f.label :birthdate
    %br/
    = f.date_select :birthdate
  %p
    = f.label :address
    %br/
    = f.text_area :address
  %p
    = f.label :sex
    %br/
    = f.text_field :sex
  %p
    = f.label :phone
    %br/
    = f.text_field :phone
  %p
    = f.submit 'Create'
= link_to 'Back', patients_path
