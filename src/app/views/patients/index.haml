%h1=t(:patient_listing)
%table
  %tr
    %th=t(:first_name)
    %th=t(:family_name)
    %th=t(:birthdate)
    %th=t(:address)
    %th=t(:sex)
    %th=t(:phone)
  - @patients.each do |patient|
    %tr
      %td= h patient.first_name
      %td= h patient.family_name
      %td= h patient.birthdate
      %td= h patient.address
      %td= h patient.sex
      %td= h patient.phone
      %td= link_to t(:show), patient
      %td= link_to t(:edit), edit_patient_path(patient)
      %td= link_to t(:destroy), patient, :confirm => 'Are you sure?', :method => :delete
%br/
= link_to t(:new_patient_button), new_patient_path
