-title t('navi.tabs.master_data')

.fields
    .field
        .field-label
            =t('patient.first_name')
        .field-content
            = h @patient.first_name
    .field
        .field-label
            =t('patient.family_name')
        .field-content
            = h @patient.family_name
    .field
        .field-label
            =t('patient.birthdate')
        .field-content
            = h @patient.birthdate
    .field
        .field-label
            =t('patient.address')
        .field-content
            = h @patient.address
    .field
        .field-label
            =t('patient.sex')
        .field-content
            = h @patient.sex
    .field
        .field-label
            =t('patient.phone')
        .field-content
            = h @patient.phone

#comments
    %h2=t('comments')
    %ul.comments-list
        -@comments.each do |comment|
            %li.comment
                .comment-body=comment.comment
                .comment-date=show_date(comment.created_at)

    .comment_form
        -form_tag :action => "comment", :id => @patient do
            =error_messages_for :comment
            =text_area "comment", "comment", :size => '34x3'
            =submit_tag t('comment.submit')

.action-links
    = link_to t('patient.medicalreport'), patient_medical_reports_path(@patient), :class => 'acts_as_button'
    |
    = link_to t('action.edit'), edit_patient_path(@patient), :class => 'acts_as_button'
    |
    =link_to t('action.destroy'), @patient, :confirm => t('delete_confirmation'), :method => :delete, :class => 'acts_as_button lightgray'
    |
    =link_to t('action.back'), patients_path, :class => 'acts_as_button darkgray'
