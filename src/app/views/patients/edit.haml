%h1=t('patient.edit')
- form_for(@patient) do |f|
  = f.error_messages
  %p
    = f.label t('patient.first_name')
    %br/
    = f.text_field :first_name
  %p
    = f.label t('patient.family_name')
    %br/
    = f.text_field :family_name
  %p
    = f.label t('patient.birthdate')
    %br/
    = f.date_select :birthdate
  %p
    = f.label t('patient.address')
    %br/
    = f.text_area :address
  %p
    = f.label t('patient.sex')
    %br/
    = f.text_field :sex
  %p
    = f.label t('patient.phone')
    %br/
    = f.text_field :phone
  %p
    = f.submit t('action.update')
= link_to t('action.show'), @patient, :class => 'acts_as_button'
|
=link_to t('action.back'), patients_path, :class => 'acts_as_button darkgray'
